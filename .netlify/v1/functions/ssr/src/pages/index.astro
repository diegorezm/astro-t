---
import Layout from "@/components/layout.astro";
import ShowcaseCard from "@/components/showcase-card.astro";
---

<Layout title="Home">
  <!-- Header Section -->
  <header class="text-center mb-8">
    <h1 class="text-4xl font-bold mb-4">Welcome to the Showcase App</h1>
    <p class="text-lg text-secondary-foreground">
      This app demonstrates a Todo App and a employee management app.
    </p>
  </header>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <ShowcaseCard
      title="Todo App"
      description="A simple Todo App"
      href="/todo"
    />
    <ShowcaseCard
      title="Employee Management"
      description="Consume data from a Mock API to view employee details."
      href="/employee"
    />
  </div>
</Layout>
